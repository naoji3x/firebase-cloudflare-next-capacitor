{
  "name": "firebase-cloudflare-next-capacitor",
  "version": "0.1.0",
  "description": "the template project using firebase, cloudflare, nextjs and capacitor",
  "repository": "https://github.com/naoji3x/firebase-cloudflare-next-capacitor.git",
  "author": "naoji3x <naoji.3x@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "(cd apps/frontend && npm run lint)",
    "lint:fix": "(cd apps/frontend && npm run lint:fix)",
    "format": "(cd apps/frontend && npm run format)",
    "init:all": "npm run init:tf && npm run init:gc",
    "init:tf": "(cd scripts/terraform && terraform init)",
    "init:gc": "(cd scripts/terraform && gcloud init)",
    "auth:gc": "(cd scripts/terraform && gcloud auth application-default login)",
    "auth:logout": "(cd scripts/terraform && gcloud auth application-default revoke && gcloud auth revoke)",
    "tf:plan:dev": "(cd scripts/terraform && terraform plan -var-file=development.tfvars)",
    "tf:apply:dev": "(cd scripts/terraform && terraform apply -var-file=development.tfvars)",
    "firebase:watch": "npm run build:watch -w apps/firebase/functions",
    "firebase:emulator": "npm run emulator -w apps/firebase",
    "frontend:dev": "npm run dev -w apps/frontend",
    "frontend:storybook": "npm run storybook -w apps/frontend"
  },
  "engines": {
    "npm": ">=8.19.4",
    "yarn": "please-use-npm",
    "pnpm": "please-use-npm"
  },
  "private": "true",
  "workspaces": [
    "apps/frontend",
    "apps/firebase",
    "apps/firebase/functions"
  ],
  "dependencies": {
    "@apps/firebase-functions": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "typescript": "^5",
    "eslint": "^8",
    "prettier": "^3.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.4",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0"
  }
}
